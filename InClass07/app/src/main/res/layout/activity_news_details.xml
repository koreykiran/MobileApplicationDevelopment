<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.practice.inclass07.NewsDetails">

    <TextView
        android:id="@+id/tvDTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="27dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ivDMainImage"
        android:layout_width="300dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/tvDDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvDTitle"
        android:layout_below="@+id/ivDMainImage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="11dp" />


</RelativeLayout>
